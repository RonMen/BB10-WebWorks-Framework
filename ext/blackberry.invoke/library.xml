<?xml version="1.0" encoding="utf-8"?>
<library>
    <extension id="blackberry.invoke">
        <entryClass>blackberry.invoke.Invoke</entryClass>
    </extension>
    <platforms>
        <platform value="BBX">
            <target version="default" config="BBX_XHR" />
        </platform>
    </platforms>
    <configurations>
        <configuration name="BBX_XHR" version="1.0" comment="For XHR architecture for Java implementation">         
            <src type="text/javascript" path="js/common/app_dispatcher.js" comment="Application JS XHR dispatcher" />
            <src type="text/javascript" path="js/common/app_ns.js" comment="Application JS interface" />            
            <src type="text/actionscript" path="src/Air/Application/src" comment="ActionScript implementation" />
        </configuration>
    </configurations>
    <features>
        <feature id="blackberry.invoke" version="1.0.0" />
    </features>
</library>

